generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model User {
    id                  String                @id @unique() @default(uuid())
    email               String                @unique()
    firstName           String
    lastName            String
    createdAt           DateTime              @default(now())
    updatedAt           DateTime              @updatedAt
    isVerified          Boolean
    isGoogleUser        Boolean
    password            String
    merchantID          String
    profile             Profile?              @relation(fields: [profileId], references: [id])
    profileId           String?               @unique
    MailVerificationOTp MailVerificationOTp[]
    newDeviceOTP        NewDeviceOTP[]
    session             Session[]             
    sessionId           String?                @unique
    devices  UserDevices[]
    resetPasswordOTP ResetpasswordOTP[]
}

model MailVerificationOTp {
    id          String   @id @unique() @default(uuid())
    user        User     @relation(fields: [userId], references: [id])
    userId      String
    createdAt   DateTime @default(now())
    expiredTime DateTime
    otpCode     String
}


model Profile {
    id            String   @id @unique() @default(uuid())
    user          User?
    userId        String   @unique
    middleName    String
    avatar        String?
    dateOfBirth   DateTime
    BvnNumber     String?
    isBvnVerified Boolean  @default(false)
    isKycverified Boolean  @default(false)
    payStackCode  String
    createdAt     DateTime @default(now())
    updatedAt     DateTime @updatedAt
    gender        String
    phoneNumber   String
    country       String
    countryCode   String
}

//skeeps track of access token and expiry time
model Session{
    id String @id @unique() @default(uuid())
    user User @relation(fields: [userId], references: [id])
    userId String
    token String
    createdAt  DateTime @default(now())
    expiredAt DateTime
    deviceId String
}
//keeps tracks of devices useer have used to signIn
model UserDevices{
        id String @id @unique() @default(uuid())
        device String
        user User @relation(fields: [userId], references: [id])
        userId String
}

model NewDeviceOTP{
    id String @id @unique() @default(uuid())
    user        User     @relation(fields: [userId], references: [id])
    userId      String
    createdAt   DateTime @default(now())
    expiredTime DateTime
    otpCode     String
}


model ResetpasswordOTP{
    id String @id @unique() @default(uuid())
    user        User     @relation(fields: [userId], references: [id])
    userId      String
    createdAt   DateTime @default(now())
    expiredTime DateTime
    otpCode     String
}



